<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_your_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/primaryTextColor"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_your_status" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_see_rating_you_left"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_see_rating_you_left"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_preference"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/primaryTextColor"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_preference"
                    android:textAllCaps="true" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_notification_and_communication"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_notification_and_communication"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_change_password"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_change_password"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_postal_address"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_postal_address"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/primaryTextColor"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_money"
                    android:textAllCaps="true" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_available_funds"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_available_funds"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_payment"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_payment"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_back_details"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_back_details"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_past_transfers"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_past_transfers"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_2dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/primaryTextColor"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_about"
                    android:textAllCaps="true" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_help"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_help"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_terms_conditions"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_terms_conditions"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_privacy_policy"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_privacy_policy"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_licenses"
                    android:padding="@dimen/dimen_8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/label_licenses"
                    android:paddingStart="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_32dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2dp"
            app:cardElevation="@dimen/dimen_4dp">
            <TextView
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center" android:id="@+id/tv_logout"
                android:padding="@dimen/dimen_16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:text="@string/label_logout"
                android:textAllCaps="true"
                android:paddingStart="@dimen/dimen_32dp"
                android:paddingEnd="@dimen/dimen_32dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>