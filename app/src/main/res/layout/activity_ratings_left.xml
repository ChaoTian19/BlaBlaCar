<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RatingsLeftActivity">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_48dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/star"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You haven\u0027t left a rating yet"
            android:textColor="@color/design_dark_default_color_background"
            android:textSize="@dimen/dimen_24dp"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When you leave ratings for other"
            android:textColor="@color/design_dark_default_color_background"
            android:textSize="@dimen/dimen_20dp"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="members, you increase trust in the "
            android:textColor="@color/design_dark_default_color_background"
            android:textSize="@dimen/dimen_20dp"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="community!"
            android:textColor="@color/design_dark_default_color_background"
            android:textSize="@dimen/dimen_20dp"/>


    </LinearLayout>

</LinearLayout>