<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_20dp"
    android:background="@color/white"
    >

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_marginTop="56dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/design_dark_default_color_background"
        android:textSize="@dimen/text_size_20sp"
        android:text="@string/twodistance"/>

    <TextView
        android:id="@+id/calendardate"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:text="@string/today" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/twosentencedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_80dp"
        />


    <Button
        android:textSize="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:id="@+id/tv_search"
        android:background="@drawable/background_lavender"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="Create a ride alert"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_42dp"
        />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:paddingStart="300dp"/>






</LinearLayout>