<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20dp"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awaiting transfers"
        android:textColor="@color/design_dark_default_color_background"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pound"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0.00"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@color/design_dark_default_color_background"
                android:layout_gravity="center"/>



        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We send your money automatically"
            android:textSize="@dimen/dimen_20dp"
            android:textColor="@color/design_dark_default_color_background"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/awaitingtransfers"
            android:textSize="@dimen/dimen_12dp"
            android:textColor="@color/design_dark_default_color_background"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFFER A RIDE"
            android:id="@+id/offeraride"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_12dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>