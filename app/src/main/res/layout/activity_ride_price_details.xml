<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_32dp"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_close_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="@dimen/dimen_32dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_42dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/seat_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" seat(s) x "
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/operation_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u00a326.0 "
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/calculated_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a326.0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service fees"
            android:textSize="@dimen/dimen_20dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/service_fee_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a34.0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_32dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="@dimen/dimen_20dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/total_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a330.0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>