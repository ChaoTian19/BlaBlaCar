<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/card_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:elevation="@dimen/dimen_2dp">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp">
        <ImageView
            android:id="@+id/image_user"
            android:visibility="visible"
            android:layout_width="@dimen/user_notification"
            android:layout_height="@dimen/user_notification"
            android:src="@drawable/ic_user_notification"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp">
            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/colorPrimary"
                android:gravity="left|center_vertical|center_horizontal|center|start"
                android:id="@+id/tv_title"
                android:padding="@dimen/dimen_4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_notification_title"/>
            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/primaryTextColor"
                android:gravity="left|center_vertical|center_horizontal|center|start"
                android:id="@+id/tv_content"
                android:padding="@dimen/dimen_4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_notification_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_remove"
            android:padding="@dimen/dimen_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:contentDescription="@null"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
