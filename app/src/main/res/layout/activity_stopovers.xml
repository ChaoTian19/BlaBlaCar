<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.StopOversActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Do you want to add stopovers?"
         android:textColor="@color/design_dark_default_color_background"
         android:layout_marginTop="@dimen/dimen_42dp"
         android:gravity="center"
         android:textSize="@dimen/text_size_16sp"
         android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veliky Novgorod"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_centerVertical="true"
          />
       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valday"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tver"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dimen_42dp"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:text="Add stopovers and get more passengers"
        android:textColor="@color/grey"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_primary"
        android:text="CONFIRM"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        />
</LinearLayout>