<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StopOversActivity">

    <ImageView
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Do you want to add stopovers?"
         android:textColor="@color/design_dark_default_color_background"
         android:layout_marginTop="@dimen/dimen_42dp"
         android:gravity="center"
         android:textSize="15dp"
         android:textStyle="bold"
         android:layout_below="@+id/img_back_arrow"/>

    <EditText
        android:id="@+id/et_add_stopovers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:layout_marginStart="@dimen/dimen_14dp"
        android:hint="Add stopovers and get more passengers"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:layout_above="@+id/confirm_btn"
        android:focusable="true"
        android:clickable="true"/>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_primary"
        android:text="CONFIRM"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>