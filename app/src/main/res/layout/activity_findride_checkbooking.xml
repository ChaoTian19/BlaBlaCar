<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8dp">

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your booking details"
        android:textSize="@dimen/dimen_32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        />




    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wed. 16 Oct"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/firsttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:50"
            android:textSize="@dimen/dimen_32dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/text_size_12sp"
            android:layout_marginStart="@dimen/dimen_18dp"

            />



        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fImg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/step_round_item"
                android:layout_centerHorizontal="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_below="@+id/fImg"
                android:layout_above="@+id/sImg"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/sImg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/step_round_item"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leatherhead"
            android:textSize="@dimen/dimen_24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73kingston Rd,Leatjerjead KT22 7SP,UK"
                android:textSize="@dimen/dimen_16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/secondtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:50"
            android:textSize="@dimen/dimen_32dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/text_size_12sp"
            android:layout_marginStart="@dimen/dimen_18dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale"
                android:textSize="@dimen/dimen_24dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_42dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale Metrolink Station, Sale, UK"
                android:textSize="@dimen/dimen_16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:layout_marginLeft="@dimen/dimen_42dp"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_32dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginStart="32dp"/>




        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a330.0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="220dp"

       />


    </LinearLayout>


    <TextView
        android:id="@+id/seeprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See price details"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_24dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_24dp"
  >
    <TextView
        android:id="@+id/publish_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/login_btn_background"
        android:text="Book"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        />

</RelativeLayout>




</LinearLayout>