<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web 16 October"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_36dp"
            android:layout_marginTop="30dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            >

            <TextView
                android:id="@+id/firsttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:50"
                android:textSize="@dimen/dimen_32dp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/text_size_12sp"
                android:layout_marginStart="@dimen/dimen_18dp"

                />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="50dp">


                <ImageView
                    android:id="@+id/fImg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/step_round_item"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:layout_below="@+id/fImg"
                    android:layout_above="@+id/sImg"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/sImg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/step_round_item"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="80dp"
               >
                <ImageView
                    android:id="@+id/bImg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/step_round_item"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:layout_below="@+id/fImg"
                    android:layout_above="@+id/sImg"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/fImg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/step_round_item"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:layout_below="@+id/fImg"
                    android:layout_above="@+id/sImg"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/sImg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/step_round_item"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESSO"
                    android:textSize="@dimen/dimen_24dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leatherhead"
                    android:textSize="@dimen/dimen_16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/firstpng"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/upload_photo_sample"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 km from your departure"
                        android:textColor="#DD430F"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dimen_12dp"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_marginVertical="44dp"
                    />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/secondtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:50"
                android:textSize="@dimen/dimen_32dp"
                android:textColor="@color/black"

                android:layout_marginStart="@dimen/dimen_18dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sale Metrolink Station, Sale,Uk"
                    android:textSize="@dimen/dimen_24dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:layout_marginLeft="@dimen/dimen_42dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sale"
                    android:textSize="@dimen/dimen_16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_marginLeft="@dimen/dimen_42dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="35dp">
                    <ImageView
                        android:id="@+id/firstpng"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/upload_photo_sample"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 km from your departure"
                        android:textColor="#DD430F"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_marginVertical="44dp"
                    />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</ScrollView>