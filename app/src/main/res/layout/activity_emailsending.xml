<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/leftnavemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/text_size_28sp"
        android:layout_marginLeft="@dimen/text_size_20sp"/>


    <TextView
        android:id="@+id/yettoday"
        android:textSize="@dimen/text_size_28sp"
        android:textColor="@color/design_dark_default_color_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="Enter your email and we'll notify you"
        android:layout_marginLeft="@dimen/dimen_24dp"/>


    <TextView
        android:id="@+id/datetime"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/design_dark_default_color_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/today"
        android:layout_marginLeft="@dimen/dimen_24dp"
        />

    <EditText
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_email"
        android:background="@drawable/background_lavender"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:hint="Email"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_24dp"
        />


    <TextView
        android:id="@+id/email_validation_checking"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter a valid email address."
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:textColor="@color/design_default_color_error"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">

    </LinearLayout>
    <Button
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal|center"
        android:id="@+id/tv_createalert"
        android:background="@drawable/background_primary"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create alert"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dimen_24dp"

       />






</LinearLayout>