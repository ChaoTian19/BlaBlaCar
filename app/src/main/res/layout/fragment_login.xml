<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimen_2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linear_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/facebok_icon_background"
                android:padding="@dimen/dimen_14dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_facebook_logo"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp" />
            <TextView android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/login_with_facebook_background"
                android:padding="@dimen/dimen_14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_in_with_facebook"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/LinkWater"
                android:layout_width="0dp"
                android:layout_height="@dimen/view_height_1dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:textColor="@color/Nero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                android:text="@string/or"/>
            <View
                android:background="@color/LinkWater"
                android:layout_width="0dp"
                android:layout_height="@dimen/view_height_1dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:hint="@string/email"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:hint="@string/password"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_login"
                android:background="@drawable/login_btn_background"
                android:padding="@dimen/dimen_14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/login"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:text="@string/forgot_your_password"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/not_a_member_yet"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
