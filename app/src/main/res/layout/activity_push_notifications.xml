<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_32dp"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/beforebtn"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_arrow_blue_24dp"/>

    <TextView
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push notifications"
        android:textColor="@color/design_dark_default_color_background"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_32dp"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your rides"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"

            />
        <ImageView
            android:id="@+id/yourrides"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tickblue"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News, deals and free stuff"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tickblue"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
    android:layout_marginTop="@dimen/dimen_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_12dp"
    android:paddingRight="@dimen/dimen_12dp"
    >

    <TextView
        android:layout_marginTop="@dimen/text_size_28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textColor="@color/design_dark_default_color_background"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/messages"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tickblue"
        android:layout_alignParentRight="true" />
</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/rating"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tickblue"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</LinearLayout>