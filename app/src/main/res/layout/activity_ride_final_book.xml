<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8dp">

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your booking details"
        android:textSize="@dimen/dimen_32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wed. 16 Oct"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_24dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginStart="@dimen/dimen_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/fImg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/step_round_item"
                android:layout_centerHorizontal="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_below="@+id/fImg"
                android:layout_above="@+id/sImg"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/sImg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/step_round_item"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:id="@+id/leave_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/leave_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="13:50"
                    android:textColor="@color/design_dark_default_color_background"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/leave_time_view">

                    <TextView
                        android:id="@+id/leave_city_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leatherhead"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/leave_address_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESSO"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drop_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/drop_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="17:50"
                    android:textColor="@color/design_dark_default_color_background"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/drop_time_view">

                    <TextView
                        android:id="@+id/drop_city_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/drop_address_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale Metrolink Station, Sale, UK"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/total_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a330.00"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_price_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See price details"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/book_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/login_btn_background"
            android:text="Book"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>