<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_20dp"
    android:background="@color/white"
    tools:context=".activity.NotificationCommunicationActivity"
    >




    <ImageButton
        android:id="@+id/beforebtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications \u0026"
        android:textColor="@color/design_dark_default_color_background"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_32dp"/>
    <TextView
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communication"
        android:textColor="@color/design_dark_default_color_background"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_32dp"/>




    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push notifications"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"

            />
        <ImageView
            android:id="@+id/pushnotifications"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        >

        <TextView
            android:layout_marginTop="@dimen/text_size_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notifications.messaging.title"
            android:textColor="@color/design_dark_default_color_background"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/messagingtitle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>