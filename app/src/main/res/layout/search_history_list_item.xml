<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_history_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/list_item_bg"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_left_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/history_icon"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/search_history_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:text="Where do you want to go"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_toEndOf="@+id/item_left_icon"
        android:layout_toStartOf="@+id/item_right_icon"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/item_right_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_next"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>