<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GivingPriceActivity"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/img_back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why not give our price a try?"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/img_back_arrow"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drivers who use our suggested price get reservations faster. Try it and see\nthe difference!"
        android:textSize="11sp"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/edit_amount_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:layout_alignParentBottom="true"
        android:text="EDIT THE AMOUNT"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>