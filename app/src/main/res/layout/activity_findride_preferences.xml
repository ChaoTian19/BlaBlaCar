<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_32dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are your"
        android:textSize="@dimen/dimen_36dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences?"
        android:textSize="@dimen/dimen_36dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_2dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/src_tar_city_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats"
            android:textSize="@dimen/dimen_24dp"
            android:textColor="@android:color/black"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <TextView
                android:id="@+id/minus_counter_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/counter_button_bg"
                android:text="ã…¡"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/plus_counter_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/counter_button_bg"
                android:text="+"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
        <Button
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_search"
            android:background="@drawable/background_primary"
            android:padding="@dimen/dimen_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply changes"
            android:textAllCaps="false"
            android:layout_gravity="center"

            />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>