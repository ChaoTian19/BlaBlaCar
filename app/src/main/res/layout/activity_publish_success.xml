<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PublishSuccessActivity"
    android:padding="20dp"
    android:background="@android:color/holo_green_dark">

    <ImageView
        android:id="@+id/success_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/success_img"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your ride is online! Passengers can now book and travel with you!"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/success_logo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/ok_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>