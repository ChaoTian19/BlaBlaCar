<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_32dp"
    android:background="@color/white"
    tools:context=".activity.SeePublicProfileActivity"
    >


    <ImageButton
        android:id="@+id/profileclose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_left_arrow"
        android:scaleType="fitCenter"/>

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_passenger_m"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:id="@+id/seepublic"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="PaxMOH"
         android:textColor="@color/design_dark_default_color_background"
         android:textStyle="bold"
         android:textSize="@dimen/dimen_24dp"
         android:layout_gravity="center"
         android:layout_marginTop="@dimen/dimen_16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 y/o"
        android:textColor="@color/grey"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_42dp"
      >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/chattiness"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="I'm chatty when I fell like it"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/seepublictick"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="I'm chatty when I fell like it"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/seepublictick"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="I'm chatty when I fell like it"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member since Jan 2018"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_32dp"/>




</LinearLayout>